<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMaui.MainPage"
             BackgroundImageSource="fondo.jpg"
             NavigationPage.HasNavigationBar="False"
             Title="">

    <Grid>
        <VerticalStackLayout VerticalOptions="Start" Padding="10">
            <Image Source="cafebittituloblanco.png" 
                   HorizontalOptions="Center" 
                   WidthRequest="190" 
                   HeightRequest="150"/>
        </VerticalStackLayout>
        <!--botonMenuPrincipal-->
        <ImageButton 
            Source="iniceimoscontuorden.png"
            HorizontalOptions="End"
            VerticalOptions="Center"
            WidthRequest="160"
            HeightRequest="160"
            CornerRadius="100"
            Margin="0,0,-90,90"
            Clicked="OnOrderButtonClicked">
        </ImageButton>
        <Image 
            Source="arrow.png"  
            HorizontalOptions="End"
            VerticalOptions="Center"
            WidthRequest="150"
            HeightRequest="25" 
            Margin="0,0,-60,90" />
    </Grid>


</ContentPage>